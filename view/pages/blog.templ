package pages

import (
	"github.com/hfiorillo/site/models"
	"github.com/hfiorillo/site/view/layout"
	"github.com/hfiorillo/site/view/posts"
)

templ Blog(nav bool, post models.BlogPost) {
	<!DOCTYPE html>
	@layout.Header()
	<html lang="en" data-theme="dark">
		<body class="antialiased">
			{ children... }
			<div class="w-full max-w-screen-xl mx-auto text-center py-12">
				@posts.Posts([]models.BlogPost{})
			</div>
		</body>
	</html>
}
