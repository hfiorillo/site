package layout

import "github.com/hfiorillo/site/view/ui"


templ App(nav bool, content templ.Component) {
	<!DOCTYPE html>
	@Header()
	// @ui.Sidebar()
	<html lang="en" data-theme="lofi">
		<body class="antialiased">
			if nav {
				@ui.Navigation()
			}
			{ children... }
			// <div class="w-full max-w-screen-xl mx-auto text-center py-12">
			<div>
					@content
			</div>
		</body>
	</html>
	@Footer()
}